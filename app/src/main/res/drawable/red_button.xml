<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#C2F0F0"
                />
            <stroke
                android:width="1dp"
                android:color="#00CCFF" />
            <corners
                android:radius="9dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#C2F0F0"
                android:endColor="#00B8E6"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#00B8E6" />
            <corners
                android:radius="16dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>