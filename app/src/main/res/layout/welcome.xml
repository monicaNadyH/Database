<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/logotwo"
        android:src="@drawable/logotwo"
        android:alpha=".30"
        android:layout_centerHorizontal="true"
        android:foregroundGravity="center"
        android:layout_centerVertical="true"
        />
    <ImageView
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:src="@drawable/person"
        android:id="@+id/Loginfirst2"
        android:clickable="true"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:textSize="40sp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/Loginfirst2"
        android:textColor="#010101"
        android:layout_marginLeft="20dp"
        android:id="@+id/textView" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:src="@drawable/ic_action"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:id="@+id/signupfirst2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="40sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#010101"
        android:layout_below="@+id/signupfirst2"
        android:layout_alignEnd="@+id/signupfirst2"
        android:layout_marginRight="20dp"/>



    <ImageView
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:src="@drawable/mes"
        android:layout_gravity="center_horizontal"
        android:id="@+id/more"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="about iRecall"
        android:textSize="40sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#010101"

        android:layout_below="@+id/more"
        android:layout_alignStart="@+id/textView" />





</RelativeLayout>
